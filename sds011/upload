#!/bin/sh

# directory with files generated by 'makegraphs'
OUTDIR=/home/pi/sds011/html
# directory name on target
REMOTEDIR=html/sds011/
# additional commands to execute on target
CMD="chmod g+r html/sds011/*"

# account
USER=
HOST=

scp $OUTDIR/* ${USER}@${HOST}:$REMOTEDIR
ssh ${USER}@${HOST} "$CMD"
