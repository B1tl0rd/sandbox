#!/bin/sh

# directory containing log files
LOGDIR=/home/pi/sds011/logs
# directory with files generated by 'makegraphs'
OUTDIR=/home/pi/sds011/html
# directory name on target
REMOTEDIR=html/sds011/
# additional commands to execute on target
CMD="chmod g+r html/sds011/*"

# account
USER=
HOST=

for LOG in $LOGDIR/*; do
	if [ ! -f $OUTDIR/.`basename $LOG`.uploaded ]; then
		touch $OUTDIR/.`basename $LOG`.uploaded
		scp $OUTDIR/`basename $LOG`.png ${USER}@${HOST}:$REMOTEDIR
	fi
done

scp $OUTDIR/index.html ${USER}@${HOST}:$REMOTEDIR

ssh ${USER}@${HOST} "$CMD"
